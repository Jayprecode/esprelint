{
	"version": "1.0.6",
	"license": "MIT",
	"author": "Jeremiah Olayiwola",
	"packageManager": "npm@8.1.2",
	"description": "An accumulation of useful tools for efficient code analyzing and formatting to ensure a smooth development process & Good code practice (GCP) for ReactJS projects",
	"keywords": [
		"gcp",
		"react",
		"eslint",
		"prettier",
		"gcp4react",
		"js",
		"javascript",
		"jayprecode",
		"next",
		"good code practice"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Jayprecode/gcp4react"
	},
	"workspaces": [
		"packages/*"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.pkg.github.com/"
	},
	"scripts": {
		"publish-eslint-config": "npm publish --workspace @jayprecode/eslint-config",
		"publish-prettier-config": "npm publish --workspace @jayprecode/prettier-config",
		"publish-eslint-plugin": "npm publish --workspace @jayprecode/lintstaged-config"
	}
}
